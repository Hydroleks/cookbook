{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override":{
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [{
      "Name": "Async",
      "Args":{
        "configure":[
          {
            "Name": "Console"
          },
          {
            "Name": "File",
            "Args": {
              "path": "Logs/log-.log",
              "rollingInterval": "Day",
              "retainedFileCountLimit": 30,
              "buffered": false
            }
          }
        ]
      }
    }]
  }
}
